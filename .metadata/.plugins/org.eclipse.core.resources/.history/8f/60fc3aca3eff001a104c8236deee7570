package ex2;

import java.io.FileInputStream;	//used to read in files
import java.io.FileNotFoundException;	//need this to compile code

public class Logic {
	/*public void openFile(String filename){
		FileInputStream fis = new FileInputStram(filename);
			//FileInputStream - used to open files
			//we are in the red b/c we have a checked exception b/c we need to handle if we can't read the file
