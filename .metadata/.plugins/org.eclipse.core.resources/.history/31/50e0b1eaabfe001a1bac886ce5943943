package ex1;

public class Demo1 {

	public static void main(String[] args) {
		
		//normal scenario
		int a = 10;
		int b = 2;
		int res = 0;
		
		res = a/b;
		System.out.println("Result is " + res);
		System.out.println("This are other lines of code in my app");
		System.out.println();
		
		//exception/error scenario
		int a2 = 10;
		int b2 = 2;	//0;
		int res2 = 0;
		
		try{
			res2 = a2/b2;
			//System.out.println("Result is " + res2);
			System.out.println("Other lines in try");
		}catch(ArithmeticException e){
			//KNOW Error specs
			System.out.println("You cannot divide by 0 pls :)");
		}finally{
			//"finally" does not always have to be here, but it is ALWAYs at the end when included
			System.out.println("Result is " + res2);
		}
		
		System.out.println("This are other lines of code in my app");
		
		
	}

}
