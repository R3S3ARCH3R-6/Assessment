package ex3;

//this is how we handle custom exceptions
public class Validator {

	public boolean isValidMobileNumber(String mobileNumber){
		
		return;
	}
	
	//if it is a subclass of checkedException, ...
	public boolean isValidAge(int age){
		if(age <= 0){
			throw new BusinessCheckedException("age cannot be negative or zero");
		}
		
		if(age < 18 || age > 35){
			throw new BusinessCheckedException("sorry, we only take users between the ages of 18 and 35");
		}
		
		return true;
	}
}
