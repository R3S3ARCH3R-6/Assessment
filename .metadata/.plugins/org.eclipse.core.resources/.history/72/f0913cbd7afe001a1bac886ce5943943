package regex;

public class RegularExpression {

	public static void main(String[] args) {
		/*
		 * Reg-Ex - Regular expression
		 * PMA - Pattern Matching Algorithm
		 * - uses wild cards to check the pattern of your string and can validate with it
		 * 
		 * [] - reps expressions
		 * {} - reps length
		 * ^ - reps not
		 * a-z: reps all the lowercase letters
		 * 0-9: specifies/reps digits
		 * A-Z: reps all uppercase letters
		 * 
		 * expression to write all uppercase letters:
		 * [A-Z]{5}
		 *  - any word of length 5 is validated with this expression
		 *  - any uppercase word of length 5 (word made of all capital letters here)
		 * [A-Za-z]{5} 
		 *  - any work of length 5 is validated with this expression
		 * [^A-Za-z]
		 *  - this can be anything except letters
		 *  [^A-Z a-z]
		 *  - this can be anything except letters and white spaces
		 *  [A-Z]{1,} - at least 1 uppercase letter  
		 *  
		 * */
		
		String s = "Qkaj 199f8F -- 0G)( hFS +@";
		
		//we want to extract alphabets from the string
		//System.out.println(s.replaceAll("[A-Za-z]", ""));
		System.out.println(s.replaceAll("[^A-Za-z]", ""));
		System.out.println(s.replaceAll("[^A-Za-z]", "").length());
		System.out.println(s.replaceAll("[^0-9]", ""));
		System.out.println(s.replaceAll("[^A-Za-z0-9]", ""));
		System.out.println(s.replaceAll("[ A-Za-z0-9]", ""));
	}

}
