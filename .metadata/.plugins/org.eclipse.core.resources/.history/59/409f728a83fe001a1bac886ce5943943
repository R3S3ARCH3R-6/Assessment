package code_examples;

public class TitleCaseDemo {

	public static void main(String[] args) {
		//we are converting every word's 1st letter to uppercase
		String s = "hello hi how are you doing today?";

		String ar[] = s.split(" ");
			//split takes a regex, so we can split strings by anything
		
		StringBuilder sb = new StringBuilder();
		
		for(int i = 0; i < ar.length; i++){
			sb.append(Character.toUpperCase(ar[i].charAt(0))).append(ar[i].substring(1)).append(" "); 	
				//ar[i] is a word
				//charAt(0) gets the 1st char of each word in the String array
				//ar[i] will still have the same work
				//1st append combines the strings in the array together into the StringBuilder var
				//2nd append adds spaces b/w the words
		}
		
		System.out.println(sb.toString().trim());
			//the ".trim()" is needed to remove excess spaces made by the 2nd append from the "for" loop earlier
	}

}
