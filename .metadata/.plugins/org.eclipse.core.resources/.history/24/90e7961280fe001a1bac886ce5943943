package eg1;

public class SbDemo1 {

	public static void main(String[] args) {
		
		//StringBuffer Ex
		StringBuffer sb = new StringBuffer("hello");
		System.out.println(sb);
		sb.append(" heyyyy").append(12222222).append(true);
			//(above) adds ...
		System.out.println(sb);
		//the modifications (shown above) are all happening in the same memory
		System.out.println(sb.length());
		sb.insert(2, "JAVA"); //insert the string "JAVA" into index location 2 of "sb"
		System.out.println(sb);
		
		System.out.println(sb.reverse());	//reverses the string and makes "sb" a reversed string
		System.out.println(sb);	//"sb" remains a reversed string
		
		sb.delete(3, 8);	//deletes chars from index 3 to index 8 (excludes 8)
		System.out.println(sb);
		
		StringBuffer sb1 = new StringBuffer("JAVA");
		StringBuffer sb2 = new StringBuffer("JAVA");
		
		System.out.println(sb1.equals(sb2));
		//".equals" method calls the ".equals" for the Object class
		//if ".equals" method is not in StringBuffer class, it uses the ".equals" of the parent class, "Object"
	}

}
