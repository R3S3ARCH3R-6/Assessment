package product_assignment;

public class Product {

	private int id;
	private String name;
	private float rating;
	private float cost;
	
	public Product(int id, String name){
		this.id = id;
		this.name = name;
		
	}
	
	public Product(int id, String name, float rating, float cost){
		this(id, name);
		this.rating = rating;
		this.cost = cost;
	}
	
	@Override
	public String toString(){
		return "Product [id =" + id + ", name = " + name + ", rating = " 
				+ rating + ", cost = " + cost + "]"; 
	}
}
